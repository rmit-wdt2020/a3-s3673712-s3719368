@model IEnumerable<a2_s3673712_s3719368.Areas.Admin.Models.AccountDto>
@{
    ViewData["Title"] = "Select Transaction";
}

<h1>Select Account Transaction</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="SelectTransaction">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label for="Account" class="control-label">Select Account: </label>
                <select id="Account" name="Account" class="form-control" data-val="true">
                    <option value="0">View ALL</option>
                    @foreach (var account in Model)
                    {

                        <option value="@account.AccountNumber" data-val="true">@account.AccountNumber</option>
                    }
                </select>
                <label for="FromDate" class="control-label">From Date: </label>
                <input id="FromDate" name="FromDate" type="datetime-local" class="form-control" data-val="true"
                       data-val-required="The Amount field is required." />
                <label for="ToDate" class="control-label">To Date: </label>
                <input id="ToDate" name="ToDate" type="datetime-local" class="form-control" data-val="true"
                       data-val-required="The Amount field is required." />
            </div>
            <div class="form-group">
                <input type="submit" value="View Transaction" class="btn btn-primary" />
            </div>
            @Html.ValidationMessage("DateFailed", new { @class = "text-danger" })
        </form>
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
