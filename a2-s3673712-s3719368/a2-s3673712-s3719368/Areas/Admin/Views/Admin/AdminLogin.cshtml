
@{
    ViewData["Title"] = "Login";
}

<div class="row">
    <div class="col-md-4" style="margin-left:30%; width:auto;">
        <h2>Admin Portal Login</h2>
        <hr />
        <form asp-action="AdminLogin" asp-area="admin">
            <div class="form-group">
                <label for="LoginID" class="control-label">Username</label>
                <input id="LoginID" name="LoginID" class="form-control" value="@ViewBag.LoginID" />
                <span class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="Password" class="control-label">Password</label>
                <input id="Password" name="Password" type="password" class="form-control"
                       data-val="true" data-val-required="The Password field is required." />
                @Html.ValidationMessage("Password", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                <input type="submit" value="Login" class="btn btn-primary" />
            </div>
            @Html.ValidationMessage("LoginFailed", new { @class = "text-danger" })
        </form>
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}