@model Login
@{
    ViewData["Title"] = "Login";
}
@* Login page *@
<body class="background">
    <h1>Login</h1>
    <div class="row">
        <div class="col-md-4" style="margin-left:30%; width:auto;">
            <img id="mastheadImage" src="~/logo.png" alt="RMIT University">
            <span class="mast-title" id="mastheadTitle">Customer Portal</span>
            <div class="loginbox">
                <form asp-action="Login"  style="margin-left:25px;">
                    <div class="form-group">
                        <label asp-for="LoginID" class="control-label"></label>
                        <div class="inputbox">
                            <input asp-for="LoginID" class="form-control" value="@ViewBag.LoginID" />
                        </div>
                            <span asp-validation-for="LoginID" class="text-danger"></span>
                        </div>
                    <div class="form-group">
                        <label for="Password" class="control-label">Password</label>
                        <div class="inputbox">
                            <input id="Password" name="Password" type="password" class="form-control"
                                   data-val="true" data-val-required="The Password field is required." />
                        </div>
                            @Html.ValidationMessage("Password", new { @class = "text-danger" })
                        </div>

                    <div class="form-group">
                        <div class="inputbox">
                            <input type="submit" value="Login" class="btn btn-primary" style="width: 400px !important;" />
                         </div>
                    </div>
                        @Html.ValidationMessage("LoginFailed", new { @class = "text-danger" })
</form>
            </div>
            </div>
        </div>
</body>
    @section Scripts {
        @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
    }
